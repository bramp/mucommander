<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <!-- = File table appearance ========================= -->
  <!-- ================================================= -->
  <file_table>
    <font       family="Lucida Grande,Arial,Lucida Sans" size="13"/>
    <border     color="404040"/>
    <background color="000084"/>




    <!-- 
    <normal>

      <marked               color="ffff00"/>
      <file                 color="00f0f0"/>
    </normal>

    <selected>
      <hidden               color="000080"/>
      <folder               color="000080"/>
      <archive              color="000080"/>
      <symlink              color="000080"/>
      <marked               color="ffc532"/>
      <file                 color="000080"/>
    </selected>
 -->



    <!-- = Hidden files ================================ -->
    <!-- =============================================== -->
    <hidden>
      <normal>
        <unfocused_background color="000084"/>
        <background           color="000084"/>
        <foreground           color="c0c0c0"/>
      </normal>
      <selected>
        <unfocused_background color="cccccc"/>
        <background           color="00ffff"/>
        <foreground           color="000080"/>
      </selected>
    </hidden>



    <!-- = Folders ===================================== -->
    <!-- =============================================== -->
    <folder>
      <normal>
        <unfocused_background color="000084"/>
        <background           color="000084"/>
        <foreground           color="ffffff"/>
      </normal>
      <selected>
        <unfocused_background color="cccccc"/>
        <background           color="00ffff"/>
        <foreground           color="000080"/>
      </selected>
    </folder>



    <!-- = Archive ===================================== -->
    <!-- =============================================== -->
    <archive>
      <normal>
        <unfocused_background color="000084"/>
        <background           color="000084"/>
        <foreground           color="40ff40"/>
      </normal>
      <selected>
        <unfocused_background color="cccccc"/>
        <background           color="00ffff"/>
        <foreground           color="000080"/>
      </selected>
    </archive>


    <!-- = Symlink ===================================== -->
    <!-- =============================================== -->
    <symlink>
      <normal>
        <unfocused_background color="000084"/>
        <background           color="000084"/>
        <foreground           color="cc00cc"/>
      </normal>
      <selected>
        <unfocused_background color="cccccc"/>
        <background           color="00ffff"/>
        <foreground           color="000080"/>
      </selected>
    </symlink>



    <!-- = Marked ====================================== -->
    <!-- =============================================== -->
    <marked>
      <normal>
        <unfocused_background color="000084"/>
        <background           color="000084"/>
        <foreground           color="ffff00"/>
      </normal>
      <selected>
        <unfocused_background color="cccccc"/>
        <background           color="00ffff"/>
        <foreground           color="ffc532"/>
      </selected>
    </marked>



    <!-- = Plain file ================================== -->
    <!-- =============================================== -->
    <file>
      <normal>
        <unfocused_background color="000084"/>
        <background           color="000084"/>
        <foreground           color="00f0f0"/>
      </normal>
      <selected>
        <unfocused_background color="cccccc"/>
        <background           color="00ffff"/>
        <foreground           color="000080"/>
      </selected>
    </file>
  </file_table>



  <!-- = Shell appearance ============================== -->
  <!-- ================================================= -->
  <shell>
    <font family="Monospaced,Lucida Sans Typewriter" size ="12" bold="true"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background color="ffffff"/>
      <foreground color="000000"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selected>
      <background color="3875d7"/>
      <foreground color="ffffff"/>
    </selected>
  </shell>



  <!-- = Shell history appearance ====================== -->
  <!-- ================================================= -->
  <shell_history>
    <font size="13" family="Lucida Grande,Arial,Lucida Sans"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background color="ffffff"/>
      <foreground color="000000"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selected>
      <background color="b4d5ff"/>
      <foreground color="000000"/>
    </selected>
  </shell>



  <!-- = Editor appearance ============================= -->
  <!-- ================================================= -->
  <editor>
    <font size="13" family="Lucida Grande,Arial,Lucida Sans"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background color="ffffff"/>
      <foreground color="000000"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selected>
      <background color="b4d5ff"/>
      <foreground color="000000"/>
    </selected>
  </editor>



  <!-- = Location bar appearance ======================= -->
  <!-- ================================================= -->
  <location_bar>
    <font size="13" family="Lucida Grande,Arial,Lucida Sans"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background color="ffffff"/>
      <foreground color="000000"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selected>
      <background color="b4d5ff"/>
      <foreground color="000000"/>
    </selected>
  </editor>
</theme>
