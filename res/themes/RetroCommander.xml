<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <!-- = File table appearance ========================= -->
  <!-- ================================================= -->
  <file_table>
    <font size="13" family="Lucida Grande,Arial,Lucida Sans"/>
    <border color="404040"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background           color="000084"/>
      <unfocused_background color="000084"/>
      <hidden               color="c0c0c0"/>
      <folder               color="ffffff"/>
      <archive              color="40ff40"/>
      <symlink              color="cc00cc"/>
      <marked               color="ffff00"/>
      <file                 color="00f0f0"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selection>
      <background           color="00ffff"/>
      <unfocused_background color="cccccc"/>
      <hidden               color="000080"/>
      <folder               color="000080"/>
      <archive              color="000080"/>
      <symlink              color="000080"/>
      <marked               color="ffc532"/>
      <file                 color="000080"/>
    </selection>
  </file_table>



  <!-- = Shell appearance ============================== -->
  <!-- ================================================= -->
  <shell>
    <font family="Monospaced,Lucida Sans Typewriter" size ="12" bold="true"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background color="ffffff"/>
      <text       color="009900"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selection>
      <background color="009900"/>
      <text       color="009900"/>
    </selection>
  </shell>



  <!-- = Shell history appearance ====================== -->
  <!-- ================================================= -->
  <shell_history>
    <font size="13" family="Lucida Grande,Arial,Lucida Sans"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background color="ffffff"/>
      <text       color="000000"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selection>
      <background color="b4d5ff"/>
      <text       color="000000"/>
    </selection>
  </shell>



  <!-- = Editor appearance ============================= -->
  <!-- ================================================= -->
  <editor>
    <font size="13" family="Lucida Grande,Arial,Lucida Sans"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background color="ffffff"/>
      <text       color="000000"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selection>
      <background color="b4d5ff"/>
      <text       color="000000"/>
    </selection>
  </editor>



  <!-- = Location bar appearance ======================= -->
  <!-- ================================================= -->
  <location_bar>
    <font size="13" family="Lucida Grande,Arial,Lucida Sans"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <background color="ffffff"/>
      <text       color="000000"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selection>
      <background color="b4d5ff"/>
      <text       color="000000"/>
    </selection>
  </editor>
</theme>
