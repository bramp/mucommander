<!-- Description:                                        -->
<!-- A simple, black on white theme meant to look like   -->
<!-- a native application on most platforms.             -->
<!-- =================================================== -->

<theme>
  <!-- = File table appearance ========================= -->
  <!-- ================================================= -->
  <file_table>
    <font                 family="Lucida Grande,Tahoma,Lucida Sans" size ="12"/>
    <border               color="868686"/>
    <background           color="ffffff"/>
    <unfocused_background color="f5f5f5"/>


    <!-- = Hidden files ================================ -->
    <!-- =============================================== -->
    <hidden>
      <normal>
        <unfocused_background color="f5f5f5"/>
        <unfocused_foreground color="666666"/>
        <background           color="ffffff"/>
        <foreground           color="666666"/>
      </normal>
      <selected>
        <unfocused_background color="c0c0c0"/>
        <unfocused_foreground color="666666"/>
        <background           color="3875d7"/>
        <foreground           color="ffffff"/>
      </selected>
    </hidden>



    <!-- = Folders ===================================== -->
    <!-- =============================================== -->
    <folder>
      <normal>
        <unfocused_background color="f5f5f5"/>
        <unfocused_foreground color="000000"/>
        <background           color="ffffff"/>
        <foreground           color="000000"/>
      </normal>
      <selected>
        <unfocused_background color="c0c0c0"/>
        <unfocused_foreground color="000000"/>
        <background           color="3875d7"/>
        <foreground           color="ffffff"/>
      </selected>
    </folder>



    <!-- = Archive ===================================== -->
    <!-- =============================================== -->
    <archive>
      <normal>
        <unfocused_background color="f5f5f5"/>
        <unfocused_foreground color="000000"/>
        <background           color="ffffff"/>
        <foreground           color="000000"/>
      </normal>
      <selected>
        <unfocused_background color="c0c0c0"/>
        <unfocused_foreground color="000000"/>
        <background           color="3875d7"/>
        <foreground           color="ffffff"/>
      </selected>
    </archive>


    <!-- = Symlink ===================================== -->
    <!-- =============================================== -->
    <symlink>
      <normal>
        <unfocused_background color="f5f5f5"/>
        <unfocused_foreground color="0000ee"/>
        <background           color="ffffff"/>
        <foreground           color="0000ee"/>
      </normal>
      <selected>
        <unfocused_background color="c0c0c0"/>
        <unfocused_foreground color="0000ee"/>
        <background           color="3875d7"/>
        <foreground           color="ffffff"/>
      </selected>
    </symlink>



    <!-- = Marked ====================================== -->
    <!-- =============================================== -->
    <marked>
      <normal>
        <unfocused_background color="f5f5f5"/>
        <unfocused_foreground color="cc0000"/>
        <background           color="ffffff"/>
        <foreground           color="cc0000"/>
      </normal>
      <selected>
        <unfocused_background color="c0c0c0"/>
        <unfocused_foreground color="cc0000"/>
        <background           color="3875d7"/>
        <foreground           color="cc0000"/>
      </selected>
    </marked>



    <!-- = Plain file ================================== -->
    <!-- =============================================== -->
    <file>
      <normal>
        <unfocused_background color="f5f5f5"/>
        <unfocused_foreground color="000000"/>
        <background           color="ffffff"/>
        <foreground           color="000000"/>
      </normal>
      <selected>
        <unfocused_background color="c0c0c0"/>
        <unfocused_foreground color="000000"/>
        <background           color="3875d7"/>
        <foreground           color="ffffff"/>
      </selected>
    </file>
  </file_table>



  <!-- = Shell appearance ============================== -->
  <!-- ================================================= -->
  <shell>
    <font family="Monospaced,Lucida Sans Typewriter" size ="12" bold="true"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <foreground color="000000"/>
      <background color="ffffff"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selected>
      <foreground color="ffffff"/>
      <background color="3875d7"/>
    </selected>
  </shell>



  <!-- = Shell history appearance ====================== -->
  <!-- ================================================= -->
  <shell_history>
    <font family="Lucida Grande,Tahoma,Lucida Sans" size ="12"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <foreground color="000000"/>
      <background color="ffffff"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selected>
      <foreground color="ffffff"/>
      <background color="3875d7"/>
    </selected>
  </shell_history>



  <!-- = Editor appearance ============================= -->
  <!-- ================================================= -->
  <editor>
    <font family="Lucida Grande,Tahoma,Lucida Sans" size ="12"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <foreground color="000000"/>
      <background color="ffffff"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selected>
      <foreground color="ffffff"/>
      <background color="3875d7"/>
    </selected>
  </editor>



  <!-- = Location bar appearance ======================= -->
  <!-- ================================================= -->
  <location_bar>
    <font family="Lucida Grande,Tahoma,Lucida Sans" size ="12"/>
    <progress color="3875d7" alpha="40"/>

    <!-- = Default appearance ========================== -->
    <!-- =============================================== -->
    <normal>
      <foreground color="000000"/>
      <background color="ffffff"/>
    </normal>

    <!-- = Selected appearance ========================= -->
    <!-- =============================================== -->
    <selected>
      <foreground color="ffffff"/>
      <background color="3875d7"/>
    </selecteda>
  </location_bar>



  <!-- = Status bar appearance ========================= -->
  <!-- ================================================= -->
  <status_bar>
    <font      family="Lucida Grande,Tahoma,Lucida Sans" size ="12"/>
    <foreground color="000000"/>
    <border     color="868686"/>
    <background color="d6d6d6"/>
    <ok         color="5dc23c"/>
    <warning    color="f6dc6c"/>
    <critical   color="e6594e"/>
  </status_bar>
</theme>
