<?xml version="1.0" encoding="UTF-8"?>
<!-- Defines action / keyboard mappings. Each action can have a primary          -->
<!-- ('keystroke' attribute) and optional secondary ('alt_keystroke' attribute)  -->
<!-- shortcut.  The syntax for keystrokes is detailed here :                     -->
<!-- http://java.sun.com/j2se/1.4.2/docs/api/javax/swing/KeyStroke.html#getKeyStrokeForEvent(java.awt.event.KeyEvent) -->

<keymap version="0.8.4">
  <!-- Action  : Show quick list with parent folders of current location.     -->
  <!-- Default : alt 1                                                       -->
  <action class="com.mucommander.ui.action.impl.ShowParentFoldersQLAction"        keystroke="alt 1"/>
  
  <!-- Action  : Show quick list with recently accessed locations,       -->
  <!-- Default : alt 2                                                       -->
  <action class="com.mucommander.ui.action.impl.ShowRecentLocationsQLAction" keystroke="alt 2"/>

  <!-- Action  : Show quick list with recently executed files,       -->
  <!-- Default : alt 3                                                       -->
  <action class="com.mucommander.ui.action.impl.ShowRecentExecutedFilesQLAction" keystroke="alt 3"/>
  
  <!-- Action  : Show quick list with bookmarks,       -->
  <!-- Default : alt 4                                                       -->
  <action class="com.mucommander.ui.action.impl.ShowBookmarksQLAction" keystroke="alt 4"/>
  
  <!-- Action  : Create a bookmark from the location of the current panel.       -->
  <!-- Default : control B                                                       -->
  <action class="com.mucommander.ui.action.impl.AddBookmarkAction"            keystroke="control B"/>

  <!-- Action  : Set keyboard focus to the location bar.                         -->
  <!-- Default : control G                                                       -->
  <action class="com.mucommander.ui.action.impl.ChangeLocationAction"         keystroke="control G"/>

  <!-- Action  : Close the current window.                                       -->
  <!-- Default : F10, meta W                                                     -->
  <action class="com.mucommander.ui.action.impl.CloseWindowAction"            keystroke="F10"
                                                                         alt_keystroke="meta W"/>

  <!-- Action  : Compare the content of both panels.                             -->
  <!-- Default : control M                                                       -->
  <action class="com.mucommander.ui.action.impl.CompareFoldersAction"         keystroke="control M"/>

  <!-- Action  : Open the 'Connect to server...' dialog.                         -->
  <!-- Default : control K                                                       -->
  <action class="com.mucommander.ui.action.impl.ConnectToServerAction"        keystroke="control K"/>

  <!-- Action  : Copy selected file(s).                                          -->
  <!-- Default : F5                                                              -->
  <action class="com.mucommander.ui.action.impl.CopyAction"                   keystroke="F5"/>

  <!-- Action  : Copy selected file(s) name(s) to clipboard.                     -->
  <!-- Default : shift control C                                                 -->
  <action class="com.mucommander.ui.action.impl.CopyFileNamesAction"          keystroke="shift control C"/>

  <!-- Action  : Copy selected file(s) full path(s) to clipboard.                -->
  <!-- Default : shift alt C                                                     -->
  <action class="com.mucommander.ui.action.impl.CopyFilePathsAction"          keystroke="shift alt C"/>

  <!-- Action  : Copy selected file(s) name(s) to clipboard.                     -->
  <!-- Default : meta C, control C                                               -->
  <action class="com.mucommander.ui.action.impl.CopyFilesToClipboardAction"   keystroke="control C"
                                                                         alt_keystroke="meta C"/>

  <!-- Action  : Cycle forward through the folder panel's components.            -->
  <!-- Default : control TAB                                                     -->
  <action class="com.mucommander.ui.action.impl.CycleForwardThruFolderPanelAction"
                                                                         keystroke="control TAB"/>
        
  <!-- Action  : Cycle backward through the folder panel's components.           -->
  <!-- Default : shift control TAB                                               -->
  <action class="com.mucommander.ui.action.impl.CycleBackwardThruFolderPanelAction"
                                                                         keystroke="shift control TAB"/>

  <!-- Action  : Delete selected file(s), moving them to the trash if possible.  -->
  <!-- Default : F8, DELETE                                                      -->
  <action class="com.mucommander.ui.action.impl.DeleteAction"                 keystroke="F8"
                                                                         alt_keystroke="DELETE"/>

  <!-- Action  : Permanently delete selected file(s), bypassing the system trash.-->
  <!-- Default : shift F8, shift DELETE                                          -->
  <action class="com.mucommander.ui.action.impl.PermanentDeleteAction"        keystroke="shift F8"
                                                                         alt_keystroke="shift DELETE"/>

  <!-- Action  : Edit selected file using custom editor.                         -->
  <!-- Ignores multiple selection.                                               -->
  <!-- Default : F4                                                              -->
  <action class="com.mucommander.ui.action.impl.EditAction"                   keystroke="F4"/>

  <!-- Action  : Email selected file(s).                                         -->
  <!-- Default : control S                                                       -->
  <action class="com.mucommander.ui.action.impl.EmailAction"                  keystroke="control S"/>

  <!-- Action  : Go back (in history).                                           -->
  <!-- Default : alt LEFT                                                        -->
  <action class="com.mucommander.ui.action.impl.GoBackAction"                 keystroke="alt LEFT"/>

  <!-- Action  : Go forward (in history).                                        -->
  <!-- Default : alt RIGHT                                                       -->
  <action class="com.mucommander.ui.action.impl.GoForwardAction"              keystroke="alt RIGHT"/>

  <!-- Action  : Go to the current folder's parent folder                        -->
  <!-- Default : BACK_SPACE, LEFT                                                -->
  <action class="com.mucommander.ui.action.impl.GoToParentAction"             keystroke="BACK_SPACE"
                                                                         alt_keystroke="LEFT"/>

  <!-- Action  : Go to the current folder's root folder                          -->
  <!-- Default : shift BACK_SPACE, control BACK_SLASH                            -->
  <action class="com.mucommander.ui.action.impl.GoToRootAction"               keystroke="shift BACK_SPACE"
                                                                         alt_keystroke="control BACK_SLASH"/>

  <!-- Action  : Invert current selection (ignoring folders).                    -->
  <!-- Default : MULTIPLY                                                        -->
  <action class="com.mucommander.ui.action.impl.InvertSelectionAction"        keystroke="MULTIPLY"/>

  <!-- Action  : Copy selected file to same folder (ignores multiple selection). -->
  <!-- Default : shift F5                                                        -->
  <action class="com.mucommander.ui.action.impl.LocalCopyAction"              keystroke="shift F5"/>

  <!-- Action  : Select all files and folders in current pane.                   -->
  <!-- Default : control A                                                       -->
  <action class="com.mucommander.ui.action.impl.MarkAllAction"                keystroke="control A"/>

  <!-- Action  : Open the 'mark' dialog.                                         -->
  <!-- Default : ADD                                                             -->
  <action class="com.mucommander.ui.action.impl.MarkGroupAction"              keystroke="ADD"/>

  <!-- Action  : Marks or unmarks files from the currently selected row to the   -->
  <!--           next page's row                                                 -->
  <!-- Default : shift PAGE_DOWN                                                 -->
  <action class="com.mucommander.ui.action.impl.MarkPageDownAction"           keystroke="shift PAGE_DOWN"/>

  <!-- Action  : Marks or unmarks files from the currently selected row to the   -->
  <!--           previous page's row                                             -->
  <!-- Default : shift PAGE_UP                                                   -->
  <action class="com.mucommander.ui.action.impl.MarkPageUpAction"             keystroke="shift PAGE_UP"/>

  <!-- Action  : Marks or unmarks the current selected file.                     -->
  <!-- Default : SPACE, INSERT                                                   -->
  <action class="com.mucommander.ui.action.impl.MarkSelectedFileAction"       keystroke="SPACE"
                                                                         alt_keystroke="INSERT"/>
  <!-- Action  : Marks or unmarks files from the currently selected row          -->
  <!--           to the first row.                                               -->
  <!-- Default : shift HOME                                                      -->
  <action class="com.mucommander.ui.action.impl.MarkUpToFirstRowAction"       keystroke="shift HOME"/>

  <!-- Action  : Marks or unmarks files from the currently selected row          -->
  <!--           to the last row.                                                -->
  <!-- Default : shift END                                                       -->
  <action class="com.mucommander.ui.action.impl.MarkUpToLastRowAction"        keystroke="shift END"/>

  <!-- Action  : Create a new folder.                                            -->
  <!-- Default : F7                                                              -->
  <action class="com.mucommander.ui.action.impl.MkdirAction"                  keystroke="F7"/>

  <!-- Action  : Create a new file.                                              -->
  <!-- Default : shift F7                                                        -->
  <action class="com.mucommander.ui.action.impl.MkfileAction"                 keystroke="shift F7"/>

  <!-- Action  : Move selected file(s).                                          -->
  <!-- Default : F6                                                              -->
  <action class="com.mucommander.ui.action.impl.MoveAction"                   keystroke="F6"/>

  <!-- Action  : Create a new window.                                            -->
  <!-- Default : control N                                                       -->
  <action class="com.mucommander.ui.action.impl.NewWindowAction"              keystroke="control N"/>

  <!-- Action  : Open selected file or folder (ignores multiple selections).     -->
  <!-- Default : ENTER, RIGHT                                                    -->
  <action class="com.mucommander.ui.action.impl.OpenAction"                   keystroke="ENTER"
                                                                         alt_keystroke="RIGHT"/>

  <!-- Action  : Open selected file or folder (ignores multiple selections)      -->
  <!--           using system associations.                                      -->
  <!-- Default : shift ENTER                                                     -->
  <action class="com.mucommander.ui.action.impl.OpenNativelyAction"           keystroke="shift ENTER"/>

  <!-- Action  : Open 'Pack files' dialog.                                       -->
  <!-- Default : control I                                                       -->
  <action class="com.mucommander.ui.action.impl.PackAction"                   keystroke="control I"/>

  <!-- Action  : Paste clipboard file(s) to the current folder.                  -->
  <!-- Default : meta V, control V                                               -->
  <action class="com.mucommander.ui.action.impl.PasteClipboardFilesAction"    keystroke="control V"
                                                                         alt_keystroke="meta V"/>
    
  <!-- Action  : Set keyboard focus on the left drive list.                      -->
  <!-- Default : alt F1                                                          -->
  <action class="com.mucommander.ui.action.impl.PopupLeftDriveButtonAction"   keystroke="alt F1"/>

  <!-- Action  : Set keyboard focus on the right drive list.                     -->
  <!-- Default : alt F2                                                          -->
  <action class="com.mucommander.ui.action.impl.PopupRightDriveButtonAction"  keystroke="alt F2"/>

  <!-- Action  : Quit the application (Ignored under Mac OS X).                  -->
  <!-- Default : control Q                                                       -->
  <action class="com.mucommander.ui.action.impl.QuitAction"                   keystroke="control Q"/>

  <!-- Action  : Refresh the content of the current panel.                       -->
  <!-- Default : F9                                                              -->
  <action class="com.mucommander.ui.action.impl.RefreshAction"                keystroke="F9"/>

  <!-- Action  : Switch focus to next window.                                    -->
  <!-- Default : control RIGHT                                                   -->
  <action class="com.mucommander.ui.action.impl.RecallNextWindowAction"       keystroke="control RIGHT"/>

  <!-- Action  : Switch focus to previous window.                                -->
  <!-- Default : control LEFT                                                    -->
  <action class="com.mucommander.ui.action.impl.RecallPreviousWindowAction"   keystroke="control LEFT"/>

  <!-- Action  : Recalls window number 1.                                        -->
  <!-- Default : control 1                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow1Action"          keystroke="control 1"/>

  <!-- Action  : Recalls window number 2.                                        -->
  <!-- Default : control 2                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow2Action"          keystroke="control 2"/>

  <!-- Action  : Recalls window number 3.                                        -->
  <!-- Default : control 3                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow3Action"          keystroke="control 3"/>

  <!-- Action  : Recalls window number 4.                                        -->
  <!-- Default : control 4                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow4Action"          keystroke="control 4"/>

  <!-- Action  : Recalls window number 5.                                        -->
  <!-- Default : control 5                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow5Action"          keystroke="control 5"/>

  <!-- Action  : Recalls window number 6.                                        -->
  <!-- Default : control 6                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow6Action"          keystroke="control 6"/>

  <!-- Action  : Recalls window number 7.                                        -->
  <!-- Default : control 7                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow7Action"          keystroke="control 7"/>

  <!-- Action  : Recalls window number 8.                                        -->
  <!-- Default : control 8                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow8Action"          keystroke="control 8"/>

  <!-- Action  : Recalls window number 9.                                        -->
  <!-- Default : control 9                                                       -->
  <action class="com.mucommander.ui.action.impl.RecallWindow9Action"          keystroke="control 9"/>

  <!-- Action  : Recalls window number 10.                                       -->
  <!-- Default : control 10                                                      -->
  <action class="com.mucommander.ui.action.impl.RecallWindow10Action"         keystroke="control 0"/>

  <!-- Action  : Rename the current file (ignores multiple selections).          -->
  <!-- Default : shift F6                                                        -->
  <action class="com.mucommander.ui.action.impl.RenameAction"                 keystroke="shift F6"/>

  <!-- Action  : Reveal current selection in OS dependant file manager.          -->
  <!-- Default : control L                                                       -->
  <action class="com.mucommander.ui.action.impl.RevealInDesktopAction"        keystroke="control L"/>

  <!-- Action  : Open the 'Run command' dialog.                                  -->
  <!-- Default : control R                                                       -->
  <action class="com.mucommander.ui.action.impl.RunCommandAction"             keystroke="control R"/>

  <!-- Action  : Moves the carret to the first line in the pane.                 -->
  <!-- Default : HOME                                                            -->
  <action class="com.mucommander.ui.action.impl.SelectFirstRowAction"         keystroke="HOME"/>

  <!-- Action  : Moves the carret to the last line in the pane.                  -->
  <!-- Default : END                                                             -->
  <action class="com.mucommander.ui.action.impl.SelectLastRowAction"          keystroke="END"/>

  <!-- Action  : Set both panes to the location of the current one.              -->
  <!-- Default : control E                                                       -->
  <action class="com.mucommander.ui.action.impl.SetSameFolderAction"          keystroke="control E"/>

  <!-- Action  : Show the properties of current selection.                       -->
  <!-- Default : alt ENTER                                                       -->
  <action class="com.mucommander.ui.action.impl.ShowFilePropertiesAction"     keystroke="alt ENTER"/>

  <!-- Action  : Show a list of active server connections.                       -->
  <!-- Default : alt ENTER                                                       -->
  <action class="com.mucommander.ui.action.impl.ShowServerConnectionsAction"  keystroke="shift control K"/>

  <!-- Action  : Sort current pane by date.                                      -->
  <!-- Default : control F6                                                      -->
  <action class="com.mucommander.ui.action.impl.SortByDateAction"             keystroke="control F6"/>

  <!-- Action  : Sort current pane by extension.                                 -->
  <!-- Default : control F3                                                      -->
  <action class="com.mucommander.ui.action.impl.SortByExtensionAction"        keystroke="control F3"/>

  <!-- Action  : Sort current pane by group.                                     -->
  <!-- Default : control F9                                                      -->
  <action class="com.mucommander.ui.action.impl.SortByGroupAction"            keystroke="control F9"/>

  <!-- Action  : Sort current pane by name.                                      -->
  <!-- Default : control F4                                                      -->
  <action class="com.mucommander.ui.action.impl.SortByNameAction"             keystroke="control F4"/>

  <!-- Action  : Sort current pane by owner.                                     -->
  <!-- Default : control F8                                                      -->
  <action class="com.mucommander.ui.action.impl.SortByOwnerAction"            keystroke="control F8"/>

  <!-- Action  : Sort current pane by permissions.                               -->
  <!-- Default : control F7                                                      -->
  <action class="com.mucommander.ui.action.impl.SortByPermissionsAction"      keystroke="control F7"/>

  <!-- Action  : Sort current pane by size.                                      -->
  <!-- Default : control F5                                                      -->
  <action class="com.mucommander.ui.action.impl.SortBySizeAction"             keystroke="control F5"/>

  <!-- Action  : Stops the current action.                                       -->
  <!-- Default : ESCAPE                                                          -->
  <action class="com.mucommander.ui.action.impl.StopAction"                   keystroke="ESCAPE"/>

  <!-- Action  : Swap the location of both panes.                                -->
  <!-- Default : control U                                                       -->
  <action class="com.mucommander.ui.action.impl.SwapFoldersAction"            keystroke="control U"/>

  <!-- Action  : Switch selection to other tab.                                  -->
  <!-- Default : TAB, shift TAB                                                  -->
  <action class="com.mucommander.ui.action.impl.SwitchActiveTableAction"      keystroke="TAB"
                                                                         alt_keystroke="shift TAB"/>

  <!-- Action  : Unmark all marked files and folders in current pane.            -->
  <!-- Default : control D                                                       -->
  <action class="com.mucommander.ui.action.impl.UnmarkAllAction"              keystroke="control D"/>

  <!-- Action  : Open the "Unmark" dialog.                                       -->
  <!-- Default : SUBSTRACT                                                       -->
  <action class="com.mucommander.ui.action.impl.UnmarkGroupAction"            keystroke="SUBTRACT"/>

  <!-- Action  : Open the "Unpack" dialog.                                       -->
  <!-- Default : control P                                                       -->
  <action class="com.mucommander.ui.action.impl.UnpackAction"                 keystroke="control P"/>

  <!-- Action  : Open the custom file viewer on selected file.                   -->
  <!-- Default : F3                                                              -->
  <action class="com.mucommander.ui.action.impl.ViewAction"                   keystroke="F3"/>

  <!-- Action  : Toggle hidden files display on and off.                         -->
  <!-- Default : shift alt H                                                     -->
  <action class="com.mucommander.ui.action.impl.ToggleHiddenFilesAction"      keystroke="shift alt H"/>

  <!-- Action  : Open the bookmark file system in the current folder panel.      -->
  <!-- Default : shift control B                                                 -->
  <action class="com.mucommander.ui.action.impl.ExploreBookmarksAction"       keystroke="shift control B"/>

  <!-- Action  : Change the selected files' date.                                -->
  <!-- Default : shift alt D                                                     -->
  <action class="com.mucommander.ui.action.impl.ChangeDateAction"             keystroke="shift alt D"/>

  <!-- Action  : Change the selected files' permissions.                         -->
  <!-- Default : shift alt P                                                     -->
  <action class="com.mucommander.ui.action.impl.ChangePermissionsAction"      keystroke="shift alt P"/>

  <!-- Action  : Calculate the checksum of the selected files'                   -->
  <!-- Default : shift alt K                                                     -->
  <action class="com.mucommander.ui.action.impl.CalculateChecksumAction"      keystroke="shift alt K"/>

  <!-- Action  : Open files in the inactive panel.                               -->
  <!-- Default : control ENTER                                                   -->
  <action class="com.mucommander.ui.action.impl.OpenInOtherPanelAction"       keystroke="control ENTER" />

  <!-- Action  : Go to the current selection's parent in the inactive panel.     -->
  <!-- Default : control BACK_SPACE                                              -->
  <action class="com.mucommander.ui.action.impl.GoToParentInOtherPanelAction" keystroke="control BACK_SPACE" />

  <!-- Action  : Mark all files whose extension match the current selection.     -->
  <!-- Default : shift ADD                                                       -->
  <action class="com.mucommander.ui.action.impl.MarkExtensionAction"          keystroke="shift ADD"/>

  <!-- Action  : Open matching files in both the active and inactive panel.      -->
  <!-- Default : shift control ENTER                                             -->
  <action class="com.mucommander.ui.action.impl.OpenInBothPanelsAction"       keystroke="shift control ENTER"/>

  <!-- Action  : Go to the current directory's parent in both active and         -->
  <!--           inactive panels.                                                -->
  <!-- Default : shift control BACK_SPACE                                        -->
  <action class="com.mucommander.ui.action.impl.GoToParentInBothPanelsAction" keystroke="shift control BACK_SPACE" />
                                                                         
  <!-- Action  : Show/Hide directory tree.                                       -->
  <!-- Default : control J                                                       -->
  <action class="com.mucommander.ui.action.impl.ToggleTreeAction"             keystroke="control J"/>
  
  <!-- Action  : Invoke batch-rename dialog.                                     -->
  <!-- Default : alt F6                                                          -->
  <action class="com.mucommander.ui.action.impl.BatchRenameAction"            keystroke="alt F6"/>

  <!-- Action  : Maximize the current window.                                    -->
  <!-- Default : meta M                                                          -->
  <action class="com.mucommander.ui.action.impl.MinimizeWindowAction"            keystroke="meta M"/>

</keymap>
